doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='//ajax.googleapis.com/ajax/libs/jquerymobile/1.4.3/jquery.mobile.min.css')
  body
    div(data-role="page", data-theme='a')
      header(data-role='header', data-theme='b')
        h1= title

      block content

      footer(data-role='footer', data-position='fixed')
        div(data-role='navbar')
          ul 
            li
              a(href='/photos', data-icon='camera', class='ui-btn-active') Photos
            li
              a(href='/slideshows', data-icon='grid') Slide-shows
            li
              a(href='/settings', data-icon='gear') Configure
              
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jquerymobile/1.4.3/jquery.mobile.min.js')