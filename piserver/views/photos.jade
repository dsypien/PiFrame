    label(for='file') Please choose an image to upload:
    input(type='file',name='fileImg',id='fileImg',value='')
    input(type='submit' value='Upload')

    footer(data-role='footer', data-position='fixed')
      div(data-role='navbar')
        ul 
          li
            a(id='photosNav',href='/', data-icon='home') Home 
          li
            a(id='photosNav',href='/photos', data-icon='camera',  class="ui-btn-active") Photos
          li
            a(id='slideshowNav',href='/slideshows', data-icon='grid') Slide-shows
           li
            a(id='configureNav',href='/settings', data-icon='gear') Settings
